---
import type { MDXLayoutProps } from 'astro'

import Layout from '~/components/layouts/layout.astro'
import { SEO } from 'astro-seo'

import site from '~/site.yml'

const { frontmatter: fm } = Astro.props as MDXLayoutProps<{
  title?: string
  description?: string
}>
---

<Layout>
  <Fragment slot="head">
    <SEO
      title={fm.title
        ? `${fm.title} \u2014 ${site.title}`
        : `${site.title} \u2014 ${site.slogan}`}
      description={fm.description || site.description}
    />
    <slot name="head" />
  </Fragment>
  <slot />
</Layout>
