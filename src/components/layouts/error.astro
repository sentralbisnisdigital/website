---
import type { MDXLayoutProps } from 'astro'

import Layout from './layout.astro'
import { SEO } from 'astro-seo'

import site from '~/site.yml'
const { frontmatter: fm } = Astro.props as MDXLayoutProps<{
  title: string
  message: string
}>
---

<Layout>
  <SEO
    title={`${fm.title} \u2014 ${site.title}`}
    description={fm.message}
    noindex={true}
    nofollow={true}
    slot="head"
  />
  <section class="__section">
    <slot />
    <p class="mt-4"><a class="btn btn-ghost" href="/">Kembali ke Beranda</a></p>
  </section>
</Layout>

<style lang="scss">
  .__section {
    @apply min-h-[100dvh] max-w-screen-sm mx-auto px-8;
    @apply flex flex-col items-center justify-center;
  }
</style>
