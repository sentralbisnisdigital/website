---
import Layout from '~/components/layouts/layout.astro'
import { SEO } from 'astro-seo'
import { Hero } from '~/components/home'

import site from '~/site.yml'
---

<Layout>
  <SEO
    title={`${site.title} \u2014 ${site.slogan}`}
    description={site.description}
    slot="head"
  />
  <Hero />
</Layout>

<style lang="scss">
  @use '../styles/fonts';

  :global(h1, h2, h3) {
    @extend %heading;
  }
</style>
